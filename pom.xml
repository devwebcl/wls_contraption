  <groupId>cl.devweb</groupId>
  <artifactId>wls-contraption</artifactId>
  <packaging>war</packaging>
  <version>3.3.5</version>
  <name>wls-contraption</name>


  <dependencies>
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>javax.servlet-api</artifactId>
